<scene>
  <scope>1</scope>

  <camera>
    <position>0,0,0</position>
    <look_at>0,0,0</look_at>
    <clip_distance>2,100</clip_distance>
  </camera>

  <light>
    <name>Light</name>
    <type>point</type>
    <position>10,10,25</position>
    <color>1,1,1</color>
  </light>

  <scene_graph>
    <root>
      <children>
	
	<animation>
	    <name>sword_swing_animation</name>
	    <loop>0</loop>
	    <seconds>1</seconds>
	    <keyframes>
	      <keyframe>
		<time>0</time>
		<translation>0,0,0</translation>
		<rotation>0,0,0,0</rotation>
	      </keyframe>
	      <keyframe>
		<time>0.5</time>
		<translation>0,0,-.3</translation>
		<rotation>30,-1,0,0</rotation>	      
	      </keyframe>
	      <keyframe>
		<time>1</time>
		<translation>0,0,0</translation>
		<rotation>0,0,0,0</rotation>	      
	      </keyframe>	    
	    </keyframes> 
	</animation>
	<child>
	  <name>handle</name>
	  <entity>
	    <name>handleEnt</name>
	    <mesh>handle.mesh</mesh>
	    <material>texture</material>
	  </entity>
	  <translation>0,7,0</translation>
	  <rotation>0,0,0,0</rotation>
	  <scale>.5,.5,.5</scale>

	  <children> <!--Handle's children -->
	    <animation>
	      <name>everything_but_the_handle_animation</name>
	      <loop>1</loop>
	      <seconds>4</seconds>
	      <keyframes>
		<keyframe>
		  <time>0</time>
		  <translation>0,0,0</translation>
		  <rotation>0,0,0,0</rotation>
		</keyframe>
		<keyframe>
		  <time>2</time>
		  <translation>0,.3,0</translation>
		  <rotation>0,0,0,0</rotation>
		</keyframe>
		<keyframe>
		  <time>4</time>
		  <translation>0,0,0</translation>
		  <rotation>0,0,0,0</rotation>
		</keyframe>
	      </keyframes>
            </animation> 
	    <child>
	      <name>center</name>
	      <entity>
		<name>centerEnt</name>
		<mesh>center.mesh</mesh>
		<material>texture</material>
	      </entity>
	      <translation>0,-5,0</translation>
	      <rotation>0,0,0,0</rotation>
	      <scale>1,1,1</scale>
	      <children>
	      </children>
	    </child>

	    <child>
	      <name>blade</name>
	      <entity>
		<name>bladeEnt</name>
		<mesh>blade.mesh</mesh>
		<material>texture</material>
	      </entity>
	      <translation>0,-7.7,0</translation>
	      <rotation>0,0,0,0</rotation>
	      <scale>1,1,1</scale>
	      <children>
	      </children>		
	    </child>

	    <child>
	      <name>hilt</name>
	      <translation>0,-5,0</translation>
	      <rotation>0,0,0,0</rotation>
	      <scale>1,1,1</scale>
	      <children>
		<animation>
		  <name>hilt_animation</name>
		  <loop>1</loop>	
		  <seconds>5</seconds>
		  <keyframes>
		    <keyframe>
		      <time>0</time>
		      <translation>0,0,0</translation>			  
		      <rotation>5,.2,1,0</rotation>
		    </keyframe>
		    <keyframe>
		      <time>2.5</time>
		      <translation>0,0,0</translation>			  
		      <rotation>-5,.2,1,0</rotation>
		    </keyframe>
		    <keyframe>
		      <time>5</time>
		      <translation>0,0,0</translation>
		      <rotation>5,.2,1,0</rotation>
		    </keyframe>	
		  </keyframes>
		</animation>

		<child>
		  <name>hilt_back</name>
		  <entity>
		    <name>hilt_backEnt</name>
		    <mesh>hilt.mesh</mesh>
		    <material>texture</material>
		  </entity>
		  <translation>-3.5,0,0</translation>
		  <rotation>180,0,1,0</rotation>
		  <scale>1,1,1</scale>
		  <children>
		  </children>
		</child>

		<child>
		  <name>hilt_front</name>
		  <entity>
		    <name>hilt_frontEnt</name>
		    <mesh>hilt.mesh</mesh>
		    <material>texture</material>
		  </entity>
		  <translation>3.5,0,0</translation>
		  <rotation>0,0,0,0</rotation>
		  <scale>1,1,1</scale>
		  <children>
		  </children>
		</child>
	      </children>
	    </child>
	  </children>
	  
	</child>
      </children>
    </root>    
  </scene_graph>
</scene>
